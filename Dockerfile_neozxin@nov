FROM ubuntu

WORKDIR /src

RUN apt update
RUN apt install -y wget
RUN wget https://github.com/kasmtech/KasmVNC/releases/download/v1.3.1/kasmvncserver_$(. /etc/os-release && echo "$VERSION_CODENAME")_1.3.1_amd64.deb
RUN apt install -y fluxbox xterm ./kasmvncserver_$(. /etc/os-release && echo "$VERSION_CODENAME")_1.3.1_amd64.deb

USER user
RUN sudo adduser user ssl-cert
